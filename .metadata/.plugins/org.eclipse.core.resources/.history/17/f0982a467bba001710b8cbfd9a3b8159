import java.util.*;

public class ArrayEj1 {

	public static void main(String[] args) {
		final int n = 10;
		int Array1 [];
		Array1 = new int[n];
		int i,media,conta=0;
		System.out.println("Escribe una frase");
		for (i=0; i < n; i++){
			conta = conta + Array1[i];
			Array1[i]=(int)Math.floor(Math.random()*21-10);

		}
		media = conta/20;
		System.out.println("La media es" +media);

	}//main

}//Class
