
import java.util.Scanner;

public class Hoja2Ej7 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		String s1;
		int clembuterol [],i,j,max=0;
		clembuterol = new int[5];
		String vocales="aeiou";
		System.out.println("Escribe una palabra");
		s1 = sc.nextLine();
		for (i=0; i<s1.length(); i++){
			for(j=0;j<vocales.length();j++){
				if(s1.charAt(i)==vocales.charAt(j)){
					clembuterol[j]++;
				}
			}
		}
		for (i=0; i<vocales.length(); i++){
			System.out.println("Aparece la vocal " +vocales.charAt(i) +" " +clembuterol[i] +" veces" +max);
			if (clembuterol[i]>0){
				max=clembuterol[i]
			}
		}
		
	}//main

}//Class