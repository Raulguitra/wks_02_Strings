/*Leer un vector de 20 enteros. Encontrar el mayor y el menor de ellos y los lugares donde se encuentran.*/
public class ArrayEj3 {

	public static void main(String[] args) {
		final int n = 20;
		int Array1 [];
		Array1 = new int[n];
		int i, max=0, min=0, conta1=0, conta2=0;
		String s1="";
		System.out.print("Lista de 20 numeros: ");
		for (i=0; i < n; i++){
			
			Array1[i]=(int)Math.floor(Math.random()*21-10);
			s1 += Array1[i];
			System.out.print((int)Array1[i]);
			System.out.print(" ");
			if (max < Array1[i]){
				max = Array1[i];
				i = conta1;
			}
			if (min > Array1[i]){
				min = Array1[i];
				i = conta2;
			}
		}
		
		//System.out.println(s1);
	
		System.out.println("Num max: " +max +" en la posicion " +conta1); //no busca
		System.out.println("Num min: " +min +" en la posicion " +conta2);
	}//main

}//Class
