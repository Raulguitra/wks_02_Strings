
import java.util.Arrays;
import java.util.Scanner;

public class Hoja2Ej7 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		String s1;
		int arrayConta [];
		arrayConta = new int[5];
		int i,j,contaA=0,contaE=0,contaI=0,contaO=0,contaU=0;
		//char vocales[]={'a', 'e', 'i', 'o', 'u'};
		System.out.println("Escribe una palabra");
		s1 = sc.nextLine();
		for (i=0; i<s1.length(); i++){
			char vocal = s1.charAt(i);
			if (vocal == 'a'){
				contaA=arrayConta[0];
				contaA++;
			}else if (vocal == 'e'){
				contaE=arrayConta[1];
				contaE++;
			}else if (vocal == 'i'){
				contaI=arrayConta[2];
				contaI++;
			}else if (vocal == 'o'){
				contaO=arrayConta[3];
				contaO++;
			}else if (vocal == 'u'){
				contaU=arrayConta[4];
				contaU++;
			}
			Arrays.sort(arrayConta);
			System.out.println("La vocal que más se repite es " +arrayConta[i] +" y se repite");
		}
		
		
			
		
	}//main
	
}//Class