import java.util.Scanner;

public class ArrayEj9 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int i,n;
		int cartaNum [] = {1, 2, 3, 4, 5, 6, 7};
		char palo [] = {'O', 'C', 'E', 'B'};
		char cartaFig [] = {'A','B','C'};
		int carta=0;
		System.out.println("Pulsa 0 para parar");
		n = sc.nextInt();
		while (n!=0){
			for (i=0; i<cartaNum.length; i++){
				carta = cartaNum[i]+palo[i];
				System.out.println(carta);
			}
			System.out.println(carta);
			System.out.println("Pulsa 0 para sacar una carta");
			n = sc.nextInt();
		}
		

	}//main

}//Class
