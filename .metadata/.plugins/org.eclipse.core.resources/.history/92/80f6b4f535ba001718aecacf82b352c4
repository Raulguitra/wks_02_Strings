import java.util.*;
public class Ejer9T4 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		String s1;
		char H, M;
		int i, contaH=0, contaM=0, contaC1=0,contaC2=0, contaMal=0, contaBien=0;
		System.out.println("Escribe: 199_(H o M)(1 o 2)(caracter libre)(caracter libre)");
		s1 = sc.nextLine();
		while (s1 != "00000000"){
			while (s1.length() != 8) {
				contaMal++;
				System.out.println("Introduce bien el codigo (longitud)");
				s1 = sc.nextLine();	
			}
			while (((s1.substring(0, 4))!="1990")&&(s1.substring(0, 4)!="1991")&&(s1.substring(0, 4)!="1992")&&(s1.substring(0, 4)!="1993")&&(s1.substring(0, 4)!="1994")&&(s1.substring(0, 4)!="1995")){
				contaMal++;
				System.out.println("Introduce bien el codigo (199X)");
				s1 = sc.nextLine();	
			}
			while (s1.charAt(4)!=72 && s1.charAt(4)!=77){
				contaMal++;
				System.out.println("Introduce bien el codigo (H o M)");
				s1 = sc.nextLine();	
			}
			while (s1.charAt(5)=='1' && s1.charAt(5)=='2'){
				contaMal++;
				System.out.println("Introduce bien el codigo (1 o 2)");
				s1 = sc.nextLine();	
			}
			if (s1.charAt(5)=='1'){
				contaC1++;
			}else{
				contaC2++;
			}
			if (s1.charAt(4)=='H'){
				contaH++;
			}else{
				contaM++;
			}
			contaBien++;
			System.out.println("Introduce otro codigo");
			s1 = sc.nextLine();
		}
		System.out.println(contaBien+" codigos han sido introducidos correctamente");
		System.out.println("Hay " +contaM +" hombres y " +contaH +" mujeres en " +contaC1 +" y " +contaM +" hombres y " +contaH +" mujeres en " +contaC2);

	}//main

}//Class