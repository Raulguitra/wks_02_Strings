import java.util.Scanner;

public class ArrayEj9 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int i,n;
		String cartaNum [] = {"1", "2", "3", "4", "5", "6", "7"};
		String palo [] = {"O", "C", "E", "B"};
		String cartaFig [] = {"A","B","C"};
		String carta="";
		System.out.println("Pulsa 0 para salir");
		n = sc.nextInt();
		while (n!=0){
			for (i=0; i<carta.length(); i++){
				System.out.println(cartaNum[i]);
				System.out.println(palo[i]);
				System.out.println(cartaFig[i]);
				
			}
			System.out.println(carta);
			System.out.println("Pulsa 0 para salir");
			n = sc.nextInt();
		}


	}//main

}//Class
